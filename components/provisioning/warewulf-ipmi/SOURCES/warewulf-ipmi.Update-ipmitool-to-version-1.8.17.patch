 MAINTAINERCLEANFILES = Makefile.in
diff --git a/3rd_party/BSD/Makefile.in b/3rd_party/BSD/Makefile.in
index fccb739..1cf8d9f 100644
--- a/3rd_party/BSD/Makefile.in
+++ b/3rd_party/BSD/Makefile.in
@@ -121,7 +121,7 @@ target_alias = @target_alias@
 top_build_prefix = @top_build_prefix@
 top_builddir = @top_builddir@
 top_srcdir = @top_srcdir@
-EXTRA_DIST = ipmitool-1.8.11.tar.gz
